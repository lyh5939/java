
public class Ex01_VariableType
{

	public static void main(String[] args)
	{
       byte  num1 = 1;  //메모리에 1바이트 할당후 
       short num2 = 1 ; //메모리에 2바이트 할당후 1 대입
       int   num3 = 1;  //메모리에 4바이트 할당후 1 대입 
       long  num4 = 1 ; //메모리에 8바이트 할당후 1 대입 
       
       System.out.println(num1);  // cpu에서 4바이트로 받은 후 1 출력
       System.out.println(num2);  // cpu에서 4바이트로 받은 후 1 출력
       System.out.println(num3);  // cpu에서 4바이트로 받은 후 1 출력
       System.out.println(num4);  // cpu에서 8바이트로 받은 후 1 출력
    }

}
